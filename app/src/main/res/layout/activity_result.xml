<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    >
    <TextView
        android:id="@+id/timestampTextV"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/timestamp"
        android:textColor="?attr/colorAccent"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/historyTextV"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/timestampTextV"
        android:text="@string/history"
        android:textColor="?attr/colorAccent"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/recentTextV"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="start"
        android:text="@string/recent"
        android:textColor="?attr/colorAccent"
        android:textSize="14sp"
        android:layout_below="@+id/historyTextV" />
    <TextView
        android:id="@+id/guessTextV"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="start"
        android:text="@string/guess"
        android:textColor="?attr/colorAccent"
        android:textSize="30sp"
        android:layout_below="@+id/recentTextV" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/GraphBelowRes"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_below="@+id/guessTextV"
        />
    <TextView
        android:id="@+id/avgTextV"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:gravity="start"
        android:text="@string/avg"
        android:textColor="?attr/colorAccent"
        android:textSize="24sp"
        android:layout_below="@+id/GraphBelowRes" />
    <TextView
        android:id="@+id/ingoalTextV"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="start"
        android:text="@string/ingoal"
        android:textColor="?attr/colorAccent"
        android:textSize="24sp"
        android:layout_below="@+id/avgTextV" />

</RelativeLayout>